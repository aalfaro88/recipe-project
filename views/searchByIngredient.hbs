<h1 class="recipesTitle">Search Results by Ingredient</h1>

{{#if recipes}}
  <ul class="recipesList">
    {{#each recipes}}
      <li class="recipeItem">
        <h3><a href="/recipes/{{_id}}">{{name}}</a></h3>
        <h4>Rating: {{avg_rating}}/5</h4>
        <p>
        This recipe has {{matchedIngredients}} out of your {{totalIngredients}} ingredients.
        </p>

      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No recipes found.</p>
{{/if}}

